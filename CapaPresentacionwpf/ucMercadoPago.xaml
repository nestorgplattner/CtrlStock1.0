<UserControl x:Class="CapaPresentacionWPF.UserControls.ucMercadoPago"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CapaPresentacionWPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#f0f2f5" FontFamily="Segoe UI">

    <UserControl.Resources>
        <!-- Aquí puedes agregar los mismos estilos del UserControl de Configuración para un diseño consistente -->
        <DropShadowEffect x:Key="PanelShadow" ShadowDepth="3" BlurRadius="10" Color="#888" Opacity="0.15"/>

        <Style x:Key="HeaderLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#222"/>
        </Style>

        <Style x:Key="FormInputStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#f9f9f9"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True" CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" Value="#007acc"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter Property="BorderBrush" Value="#007acc"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#10b981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="ButtonBorder" CornerRadius="6" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#059669"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#047857"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CleanButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#ef4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="ButtonBorder" CornerRadius="6" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#dc2626"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#b91c1c"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#444"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="20">
            <TextBlock Text="Pruebas de Mercado Pago" Style="{StaticResource HeaderLabelStyle}"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Access Token:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="AccessTokenTextBox" Width="250" Style="{StaticResource FormInputStyle}" HorizontalAlignment="Left" IsReadOnly="True" Cursor="Hand" ToolTip="El Access Token se carga desde la configuración"/>
                <TextBlock Text="Store ID:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <TextBox x:Name="StoreIdTextBox" Width="100" Style="{StaticResource FormInputStyle}" HorizontalAlignment="Left" IsReadOnly="True" Cursor="Hand" ToolTip="El Store ID se carga desde la configuración"/>
                <TextBlock Text="POS ID:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <TextBox x:Name="PosIdTextBox" Width="100" Style="{StaticResource FormInputStyle}" HorizontalAlignment="Left" IsReadOnly="True" Cursor="Hand" ToolTip="El POS ID se carga desde la configuración"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Fecha de inicio:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <DatePicker x:Name="FechaInicioPicker" Width="120"/>
                <TextBlock Text="Fecha de fin:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <DatePicker x:Name="FechaFinPicker" Width="120"/>
                <Button x:Name="ConsultarButton" Content="Consultar (por POS)" Style="{StaticResource SearchButtonStyle}" Click="ConsultarButton_Click"/>
                <Button x:Name="ConsultarGeneralButton" Content="Consultar General" Style="{StaticResource SearchButtonStyle}" Click="ConsultarGeneralButton_Click"/>
                <Button x:Name="ConsultarHoyButton" Content="Consultar Hoy" Style="{StaticResource SearchButtonStyle}" Click="ConsultarHoyButton_Click"/>
                <Button x:Name="LimpiarButton" Content="Limpiar" Style="{StaticResource CleanButtonStyle}" Click="LimpiarButton_Click"/>
            </StackPanel>
            <TextBlock x:Name="StatusMessageTextBlock" Margin="0,5,0,0" FontStyle="Italic" Foreground="Gray"/>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  x:Name="PagosDataGrid" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  Margin="20,0,20,10"
                  CanUserAddRows="False"
                  VirtualizingStackPanel.IsVirtualizing="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling"
                  HorizontalGridLinesBrush="#eee" VerticalGridLinesBrush="#eee"
                  Background="White" BorderBrush="#ddd" BorderThickness="1">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#f9f9f9"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Foreground" Value="#333"/>
                    <Setter Property="Padding" Value="8"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Path=Name, StringFormat='dd/MM/yyyy'}" FontWeight="Bold" FontSize="16" Margin="5" Foreground="#007acc"/>
                            </StackPanel>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </DataGrid.GroupStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding Status}" Width="Auto"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Monto Total" Binding="{Binding MontoTotal, StringFormat=C2}" Width="Auto"/>
                <DataGridTextColumn Header="Monto Neto" Binding="{Binding MontoNeto, StringFormat=C2}" Width="Auto"/>
                <DataGridTextColumn Header="Comisión MP" Binding="{Binding ComisionMP, StringFormat=C2}" Width="Auto"/>
                <DataGridTextColumn Header="Impuestos" Binding="{Binding Impuestos, StringFormat=C2}" Width="Auto"/>
                <DataGridTextColumn Header="Método de Pago" Binding="{Binding MetodoDePago}" Width="Auto"/>
                <DataGridTextColumn Header="% Comisión" Binding="{Binding PorcentajeComision, StringFormat=P2}" Width="Auto"/>
                <DataGridTextColumn Header="Hora Creación" Binding="{Binding DateCreated, StringFormat='HH:mm:ss'}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="20">
            <TextBlock Text="Respuesta JSON de la API:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="JsonResponseTextBox" IsReadOnly="True" TextWrapping="Wrap" Height="150" 
                     VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                     Style="{StaticResource FormInputStyle}" />
        </StackPanel>
    </Grid>
</UserControl>
